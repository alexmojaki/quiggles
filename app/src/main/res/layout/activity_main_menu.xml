<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
    >

        <Button
                android:id="@+id/newButton"
                android:text="@string/newButton"
                android:drawableStart="@drawable/pencil_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:textSize="20sp"
        />
        <Button
                android:id="@+id/loadButton"
                android:text="@string/loadButton"
                android:drawableStart="@drawable/folder_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:textSize="20sp"
        />
        <Button
                android:id="@+id/loadUnsavedButton"
                android:text="@string/loadUnsavedButton"
                android:drawableStart="@drawable/folder_clock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textAllCaps="false"
                android:textSize="20sp"
        />
    </LinearLayout>

</RelativeLayout>
